[include]
    path = .gitconfig.local
[core]
    editor = /usr/bin/vim
[color]
    diff = auto
    status = auto
    branch = auto
    grep = auto
[color "status"]
    untracked = cyan
[alias]
    st = status -s
    ci = commit -m
    diffc = diff --cached
    dif = diff
    br = branch
    co = checkout
    lgc = log --pretty=format:'%Cred%h%Creset %Cgreen(%cD)%Creset %C(cyan)%an%Creset\t %s %C(yellow)%d%Creset' --abbrev-commit
    lg = log --pretty=format:'%Cred%h%Creset %Cgreen(%cD)%Creset %C(cyan)%an%Creset\t%s %C(yellow)%d%Creset' --abbrev-commit -n 5
    compare = hub --pr
    nuke = !sh -c 'git branch -d $1 && git push origin :$1' -
[push]
    default = current
[filter "lfs"]
	clean = git-lfs clean -- %f
	smudge = git-lfs smudge -- %f
	process = git-lfs filter-process
	required = true
[user]
	name = boertel
	email = ben@comediadesign.com
